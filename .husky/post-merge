node -e "const {execSync} = require('child_process'); const files = execSync('git diff --name-only HEAD@{1} HEAD', {encoding: 'utf8'}); if (/package(-lock)?\.json|npm-shrinkwrap\.json/.test(files)) { console.log('Dependency files changed after merge. Installing, testing, and building...'); execSync('npm install', {stdio: 'inherit'}); execSync('npm test', {stdio: 'inherit'}); execSync('npm run build', {stdio: 'inherit'}); }"
